@model WPP.Model.General.PuntoFacturacionModel

@{
    ViewBag.Title = "Punto de Facturación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="margin-top:20px; ">
    <div class="col-md-3"></div>
    <div class="col-md-6 body-form">
        <h2>Detalles del Punto de Facturación</h2>
            @using (Html.BeginForm("Eliminar", "PuntoFacturacion", FormMethod.Post, new { id = "frmEliminarPuntoFacturacion", @Class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)
                <br />
                <div class="form-group">
                    <label for="Descripcion">Nombre:</label>
                    @Html.DisplayFor(m => m.Nombre, new { @Class = "form-control", id = "Descripcion" })
                </div>
                <div class="form-group">
                    <label for="Categoria">Compañias:</label>
                    <ul>
                        @foreach (var c in Model.Companias)
                        {
                            <li>@c.Nombre</li>
                        }
                    </ul>

                </div>
                <button type="submit" class="btn btn-primary">Ok</button>
                @Html.ActionLink("Cancelar", "Index", "PuntoFacturacion", null, new { @Class = "btn btn-primary" })
            }
    </div>
    <div class="col-md-3"></div>
</div>


