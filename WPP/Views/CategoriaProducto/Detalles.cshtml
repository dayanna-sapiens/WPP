@model WPP.Model.ModuloContratos.CategoriaProductoModel

@{
    ViewBag.Title = "Detalles de la Categoría del Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:20px; ">
    <div class="col-md-3"></div>
    <div class="col-md-6 body-form">
        <h2>Detalles de la Categoría del Producto</h2>

        @Html.ValidationSummary(true)
        <br />
        <div class="form-group">
            <label for="Descripcion">Nombre:</label>
            @Html.DisplayFor(m => m.Nombre, new { @Class = "form-control", id = "Descripcion" })
        </div>
        <div class="form-group">
            <label for="Categoria">Tipo:</label>
            @Html.Raw(ViewBag.TipoDescripcion)

        </div>

        @Html.ActionLink("Regresar", "Index", "CategoriaProducto", null, new { @Class = "btn btn-primary" })


    </div>
    <div class="col-md-3"></div>
</div>



