@model WPP.Model.ModuloOperacionRecoleccion.EmpleadoRecoleccionModel

@{
    ViewBag.Title = "Eliminar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:20px; ">
    <div class="col-md-3"></div>
    <div class="col-md-6 body-form">
        <h2>Eliminar Empleado</h2>

        @using (Html.BeginForm("Eliminar", "Empleado", FormMethod.Post, new { id = "frmEliminarEmpleado", @Class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true)

            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Estado)
            <div class="form-group">
                <label for="Nombre">Nombre:</label>
                @Html.DisplayFor(m => m.Nombre, new { @Class = "form-control", id = "Nombre" })
            </div>
            <div class="form-group">
                <label for="Cedula">Cédula:</label>
                @Html.DisplayFor(m => m.Cedula, new { @Class = "form-control", id = "Cedula" })
            </div>
            <div class="form-group">
                <label for="Codigo">Código:</label>
                @Html.DisplayFor(m => m.Codigo, new { @Class = "form-control", id = "Codigo" })
            </div>
            <div class="form-group">
                <label for="Puesto">Puesto:</label>
                @Html.DisplayFor(m => m.Puesto, new { @Class = "form-control", id = "Puesto" })
            </div>
            <div class="form-group">
                <label for="Jornada">Jornada:</label>
                @Html.DisplayFor(m => m.JornadaDescripcion, new { @Class = "form-control", id = "JornadaDescripcion" })
            </div>
            <button type="submit" class="btn btn-primary">Ok</button>
            @Html.ActionLink("Cancelar", "Index", "Empleado", null, new { @Class = "btn btn-primary" })

        }

    </div>
    <div class="col-md-3"></div>
</div>



