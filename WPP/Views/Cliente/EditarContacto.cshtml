@model WPP.Model.General.ContactoModel
@{
    ViewBag.Title = "Editar Contacto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Editar Contacto de @ViewBag.NombreCliente</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("EditarContacto", "Cliente", FormMethod.Post, new { id = "frmCrear", @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.Id)

            <div class="form-group">
                <label class="col-sm-2">Nombre <span title="Este campo es requerido" style="font-size:x-small" class="glyphicon glyphicon-asterisk" aria-hidden="true"></span></label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nombre)
                </div>

                <label class="col-md-2">Cédula <span title="Este campo es requerido" style="font-size:x-small" class="glyphicon glyphicon-asterisk" aria-hidden="true"></span></label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Cedula)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2">Email <span title="Este campo es requerido" style="font-size:x-small" class="glyphicon glyphicon-asterisk" aria-hidden="true"></span></label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <label class="col-md-2">Teléfono 1 <span title="Este campo es requerido" style="font-size:x-small" class="glyphicon glyphicon-asterisk" aria-hidden="true"></span></label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Telefono1, new { @Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Telefono1)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2">Extensión 1</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Ext1, new { @Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Ext1)
                </div>

                <label class="col-md-2">Teléfono 2</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Telefono2, new { @Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Telefono2)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2">Extensión 2</label>
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Ext2, new { @Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Ext2)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2">Horario</label>
                <div class="col-md-12">
                    @Html.TextAreaFor(m => m.Horario, new { @Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Horario)
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3">Observaciones</label>
                <div class="col-md-12">
                    @Html.TextAreaFor(m => m.Observaciones, new { @Class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Observaciones)
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
             @Html.ActionLink("Regresar", "Detalles", "Cliente", new { idCliente = Model.ParentId }, new { @Class = "btn btn-primary" })
        }
    </div>
</div>
